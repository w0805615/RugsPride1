@model RugsPride.Models.RugMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Rugs" asp-action="Index" method="get">
    <p>
        <select asp-for="RugMaterial" asp-items="Model.Material">
            <option value="">All</option>
        </select>

        Brand: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Shape)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rugs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shape)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

